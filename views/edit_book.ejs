<% include partials/header %>

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<h1>UPDATE BOOK</h1>

<form action="/book/<%= book._id %>?_method=PUT" method="POST">

    <div class="form-group">
        <label for="subject">Subject</label>
        <input type="text" class="form-control" id="subject" name="book[subject]" value="<%= book.subject %>">    
    </div>

    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="book[name]" value="<%= book.name %>">    
    </div>

    <div class="form-group">
        <label for="author">Author</label>
        <input type="text" class="form-control" id="author" name="book[author]" value="<%= book.author %>">    
    </div>
     
    <div class="form-group">
        <label for="id">Book ID</label>
        <input type="number" class="form-control" id="id" name="book[id]" value="<%= book.id %>">    
    </div>

    <div class="form-group">
        <label for="copies">COPIES</label>
        <input type="number" class="form-control" id="copies" name="book[copies]" value="<%= book.copies   %>">    
    </div>

    <button> Update </button>
</form>


<% include partials/footer %>
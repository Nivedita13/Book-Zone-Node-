<% include partials/header %>

<style>
    table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
}

td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
}

tr:nth-child(even) {
    background-color: #dddddd;
}

</style>
<table>
    <tr>
        <th><Base>USER NAME</Base></th>
        <th>EMAIL</th>
        <!-- <th>BLOCK BUTTON</th> -->
    </tr>
    <% users.forEach(function(user){ %>
       <% if(user.type == "user"){ %>
            <tr>
                <td> <%= user.username %> </td>
                <td> <%= user.email %> </td>
                <!-- <td> 
                    <a class="btn btn-primary" href="/admin/allusers">BLOCK</a>
                </td> -->
            </tr>
       <% } %>
       
    <% }) %>
</table>

<% include partials/footer %>
